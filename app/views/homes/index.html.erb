
<h1>Welcome to Metabook Lite</h1>

<% if user_signed_in? %>

		<h3>Signed in with: <%= current_user.first_name %> <%= current_user.last_name %>	
		<h3><%= link_to"post", new_post_path %></h3>
		 <h3><%= link_to "Add Friend", root_path %></h3>
		<h3><%= link_to"SignOut", destroy_user_session_path, method: :delete%></h3>
		<h3><%= link_to"edit account", edit_user_registration_path %></h3>
		<br/>
		<%= image_tag(current_user.avatar_thumbnail) if current_user.avatar.attached? %>
		<h5> Your Profile</h5>
	<% else %>
		<h3><%= link_to"SignUp",new_user_registration_path %></h3>
                       or
		<h3><%= link_to"SignIn",new_user_session_path %></h3>
<% end %>
